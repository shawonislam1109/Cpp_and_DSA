{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ with Input/Output Files",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build and Run C++ with Clang",
      "stdio": ["input.txt", "output.txt", "output.txt"]
    }
  ]
}
